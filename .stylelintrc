{
  "extends": [
    "stylelint-config-recommended",
    "stylelint-config-standard"
  ],
  "plugins": [
    "stylelint-order",
    "stylelint-config-rational-order/plugin"
  ],
  "rules": {
    "order/order": [
      "custom-properties",
      "dollar-variables",
      "at-variables",
      "declarations",
      "rules",
      "at-rules",
      "less-mixins"
    ],
    "plugin/rational-order": true
  }
}
